@model CyberSecLabPlatform.Models.AttackType

@{
    ViewData["Title"] = "Добавить тип атаки";
}

<h2>Добавить новый тип атаки</h2>

<form asp-action="CreateAttackType" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Difficulty"></label>
        <select asp-for="Difficulty" class="form-control">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
