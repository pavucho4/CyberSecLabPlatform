@model CyberSecLabPlatform.Models.RegisterViewModel

<form asp-action="Register" method="post" class="mt-3">
    <h2>Регистрация</h2>

    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Email" type="email" placeholder="Email" class="form-control mb-2" />
    <span asp-validation-for="Email" class="text-danger"></span>

    <input asp-for="Password" type="password" placeholder="Пароль" class="form-control mb-2" />
    <span asp-validation-for="Password" class="text-danger"></span>

    <select asp-for="Role" class="form-control mb-3" required>
        <option value="">-- Выберите роль --</option>
        <option value="Student">Student</option>
        <option value="Analyst">Analyst</option>
        <option value="Admin">Admin</option>
    </select>
    <span asp-validation-for="Role" class="text-danger"></span>

    <button type="submit" class="btn btn-success mb-3">Зарегистрироваться</button>

    <p>Уже зарегистрированы? <a asp-controller="Account" asp-action="Login">Войти</a></p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
