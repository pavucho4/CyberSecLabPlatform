@model IEnumerable<CyberSecLabPlatform.Models.Scenario>

@{
    ViewData["Title"] = "Управление сценариями";
}

<style>
    /* Обеспечиваем хороший контраст текста и фона таблицы */
    .table-responsive {
        background-color: #ffffff; /* светлый фон */
        color: #212529; /* стандартный тёмный цвет текста Bootstrap */
        padding: 1rem;
        border-radius: 0.375rem; /* округление углов */
        box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 0.075); /* лёгкая тень */
    }

    /* Можно дополнительно подправить цвета в таблице */
    .table-primary th {
        background-color: #cfe2ff; /* светло-синий фон заголовков */
        color: #084298; /* тёмно-синий цвет текста */
    }

    /* Кнопки и бейджи оставим стандартными Bootstrap, они будут видны хорошо */
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">Сценарии</h2>
        <a asp-action="CreateScenario" class="btn btn-primary">Создать новый сценарий</a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Название</th>
                    <th>Тип атаки</th>
                    <th>Макс. Баллы</th>
                    <th>Активен</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var scenario in Model)
                {
                    <tr>
                        <td>@scenario.Title</td>
                        <td>@scenario.AttackType.Name</td>
                        <td>@scenario.MaxScore</td>
                        <td>
                            @if(scenario.IsActive)
                            {
                                <span class="badge bg-success">Да</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Нет</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditScenario" asp-route-id="@scenario.Id" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
