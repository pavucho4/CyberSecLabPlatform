@model CyberSecLabPlatform.Models.RegisterViewModel

<form asp-action="Register" method="post" class="mt-4 mx-auto p-4 glass-card" style="max-width: 400px; border-radius: 12px;">
    <h2 class="mb-4 text-center text-white fw-bold" style="text-shadow: 0 0 8px rgba(29,185,84,0.7);">
        Регистрация
    </h2>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <input asp-for="Email" type="email" placeholder="Email" class="form-control form-control-lg shadow-sm" style="border-radius: 8px;" />
        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
    </div>

    <div class="mb-3">
        <input asp-for="Password" type="password" placeholder="Пароль" class="form-control form-control-lg shadow-sm" style="border-radius: 8px;" />
        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
    </div>

    <div class="mb-4">
        <select asp-for="Role" class="form-select form-select-lg shadow-sm" style="border-radius: 8px;" required>
            <option value="" disabled selected>-- Выберите роль --</option>
            <option value="Student">Студент</option>
            <option value="Analyst">Аналитик</option>
            <option value="Admin">Администратор</option>
        </select>
        <span asp-validation-for="Role" class="text-danger small mt-1 d-block"></span>
    </div>

    <button type="submit" class="btn btn-lg btn-success w-100 fw-semibold shadow" style="border-radius: 10px; background-color: #1DB954; border: none; box-shadow: 0 4px 15px rgba(29,185,84,0.6);">
        Зарегистрироваться
    </button>

    <p class="mt-3 text-center text-light" style="text-shadow: 0 0 6px rgba(0,0,0,0.5);">
        Уже зарегистрированы? <a asp-controller="Account" asp-action="Login" class="text-success fw-bold text-decoration-underline">Войти</a>
    </p>
</form>

<style>
    /* Эффект glassmorphism для формы */
    .glass-card {
        background: rgba(255 255 255 / 0.1);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255 255 255 / 0.25);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        color: #e0e7e9;
        transition: box-shadow 0.3s ease;
    }
    .glass-card:hover {
        box-shadow: 0 12px 40px 0 rgba(29, 185, 84, 0.7);
    }
    /* Поля ввода */
    input.form-control, select.form-select {
        background: rgba(255 255 255 / 0.15);
        color: #fff;
        border: none;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }
    input.form-control::placeholder {
        color: #c0d6c9;
        font-style: italic;
    }
    input.form-control:focus, select.form-select:focus {
        background: rgba(29, 185, 84, 0.15);
        box-shadow: 0 0 8px 2px #1DB954;
        color: #e0f0db;
        outline: none;
        border: none;
    }
    /* Ссылки */
    a.text-success:hover {
        color: #16a443 !important;
        text-decoration: none;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
