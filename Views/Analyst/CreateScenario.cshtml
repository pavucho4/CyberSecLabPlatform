@model CyberSecLabPlatform.Models.Scenario

@{
    ViewData["Title"] = "Создать сценарий";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h2 class="card-title text-primary mb-4">Создать сценарий</h2>

            <form asp-action="CreateScenario" method="post">
                <div class="mb-3">
                    <label class="form-label">Название</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Тип атаки</label>
                    <select asp-for="AttackTypeId" 
                            asp-items="@(new SelectList(ViewData["AttackTypes"] as List<CyberSecLabPlatform.Models.AttackType>, "Id", "Name"))" 
                            class="form-select">
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Максимальный балл</label>
                    <input asp-for="MaxScore" type="number" class="form-control" />
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Активен</label>
                </div>

                <button type="submit" class="btn btn-success">Создать</button>
            </form>
        </div>
    </div>
</div>
