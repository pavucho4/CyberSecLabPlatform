@model IEnumerable<CyberSecLabPlatform.Models.ApplicationUser>

@{
    ViewData["Title"] = "Список студентов";
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <h2 class="card-title mb-4 text-primary">Список студентов</h2>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Имя</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.UserName</td>
                            <td>@student.Email</td>
                            <td class="text-end">
                                <a asp-controller="Analyst" asp-action="StudentsResults" asp-route-studentId="@student.Id" 
                                   class="btn btn-outline-primary btn-sm">
                                    Результаты
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex flex-wrap gap-2">
            <a asp-controller="Analyst" asp-action="AssignAttacks" class="btn btn-primary">
                Назначить сценарии
            </a>
            <a asp-controller="Analyst" asp-action="ManageScenarios" class="btn btn-outline-secondary">
                Управление сценариями
            </a>
        </div>
    </div>
</div>
