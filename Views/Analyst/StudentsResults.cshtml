@model IEnumerable<CyberSecLabPlatform.Models.StudentAttackAssignment>

@{
    ViewData["Title"] = "Результаты студента";
}

<style>
    /* Обеспечиваем хороший контраст текста и фона таблицы */
    .table-responsive {
        background-color: #ffffff; /* светлый фон */
        color: #212529; /* стандартный тёмный цвет текста Bootstrap */
        padding: 1rem;
        border-radius: 0.375rem; /* округление углов */
        box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 0.075); /* лёгкая тень */
    }

    /* Можно дополнительно подправить цвета в таблице */
    .table-primary th {
        background-color: #cfe2ff; /* светло-синий фон заголовков */
        color: #084298; /* тёмно-синий цвет текста */
    }

    /* Кнопки и бейджи оставим стандартными Bootstrap, они будут видны хорошо */
</style>

<div class="container py-4">
    <h2 class="text-primary mb-4">Результаты студента</h2>

    <div class="table-responsive shadow-sm rounded mb-3">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Сценарий</th>
                    <th>Тип атаки</th>
                    <th>Статус</th>
                    <th>Баллы</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Scenario.Title</td>
                        <td>@result.Scenario.AttackType.Name</td>
                        <td>
                            @if(result.Completed)
                            {
                                <span class="badge bg-success">Выполнен</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Не выполнен</span>
                            }
                        </td>
                        <td>@result.Score</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-controller="Analyst" asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
