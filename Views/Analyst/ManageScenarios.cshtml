@model IEnumerable<CyberSecLabPlatform.Models.Scenario>

@{
    ViewData["Title"] = "Управление сценариями";
}

<h2>Сценарии</h2>

<a asp-action="CreateScenario" class="btn btn-primary mb-3">Создать новый сценарий</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип атаки</th>
            <th>Макс. Баллы</th>
            <th>Активен</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var scenario in Model)
        {
            <tr>
                <td>@scenario.Title</td>
                <td>@scenario.AttackType.Name</td>
                <td>@scenario.MaxScore</td>
                <td>@(scenario.IsActive ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="EditScenario" asp-route-id="@scenario.Id" class="btn btn-sm btn-secondary">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>
